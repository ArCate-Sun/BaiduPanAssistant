{
	"manifest_version": 2,
	"name": "百度网盘文件保存助手",
	"version": "1.0.0",
	"description": "百度网盘文件保存助手",
	"icons": {
		"128": "img/logo.png"
	},
	"page_action": {
		"default_icon": {
			"128": "img/logo.png"
		},
		"default_title": "百度网盘文件保存助手"
	},

	"background": {
		"scripts": [
			"js/background.js"
		]
	},
	
	"permissions": [
		"tabs",
		"declarativeContent",
		"http://pan.baidu.com/s/*",
		"https://pan.baidu.com/s/*"
	]
}